package thermo.system;

import thermo.phase.*;
/**
 *
 * @author  Even Solbraa
 * @version
 */

/** This class defines a thermodynamic system using the SRK equation of state
 */
public class SystemDefault extends SystemThermo {
    /** Creates a thermodynamic system using the SRK equation of state. */
    
    //  SystemSrkEos clonedSystem;
    double T=100,P=100;
    
    public SystemDefault(){
        super();
    }
    
    public SystemDefault(double T, double P) {
        super(T,P);
        this.T = T;
        this.P= P;
        
    }
    
    public void setPhase(PhaseInterface phaseType){
        for (int i=0;i<maxNumberOfPhases;i++){
            try{
                phaseArray[i] = (PhaseInterface) phaseType.getClass().newInstance();
            }
            catch(Exception e){
                System.err.println("err " + e.toString());
            }
            phaseArray[i].setTemperature(T);
            phaseArray[i].setPressure(P);
        }
    }
}