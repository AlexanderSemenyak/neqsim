package thermo.phase;

import thermo.component.*;
/**
 *
 * @author  esol
 * @version
 */
public class PhasePureComponentSolid extends PhaseSolid{
    
    /** Creates new PhasePureComponentSolid */
    public PhasePureComponentSolid() {
    }
    
    public Object clone(){
        PhasePureComponentSolid clonedPhase = null;
        try{
            clonedPhase = (PhasePureComponentSolid) super.clone();
        }
        catch(Exception e) {
            e.printStackTrace(System.err);
        }
        
        return clonedPhase;
    }
    
    public double molarVolume(double pressure, double temperature, double A, double B, int phase) throws util.exception.IsNaNException, util.exception.TooManyIterationsException {
        return 1.0;
    }
    
    public void addcomponent(String componentName, double molesInPhase, double moles, int compNumber) {
        super.addcomponent(molesInPhase);
        componentArray[compNumber] = new ComponentSolid(componentName, moles, molesInPhase, compNumber);
    }
    
    public void init(double totalNumberOfMoles, int numberOfComponents, int type, int phase, double beta){ // type = 0 start init type =1 gi nye betingelser
        super.init(totalNumberOfMoles, numberOfComponents, type, phase, beta);
    }
}