package thermo.util.example;
/*
 * TPflash.java
 *
 * Created on 27. september 2001, 09:43
 */

import thermo.system.*;
import thermodynamicOperations.*;

/**
 *
 * @author  esol
 * @version
 */
public class TPMultiFlash {
    
    /** Creates new TPflash */
    public TPMultiFlash() {
    }
    public static void main(String args[]){
        //SystemInterface testSystem = new SystemSrkCPA(333.15,1.0325);
         //   SystemInterface testSystem = new SystemPrEos(280.15,10.00);
        SystemInterface testSystem = new SystemSrkSchwartzentruberEos(280.15,20.00);
        
        ThermodynamicOperations testOps = new ThermodynamicOperations(testSystem);
        testSystem.addComponent("methane", 50);
        //testSystem.addComponent("methane", 50);
        //testSystem.addComponent("ethane", 50);
        testSystem.addComponent("water", 10.0);
        //testSystem.addComponent("n-heptane", 50);
        
        //testSystem.setMultiPhaseCheck(true);
        testSystem.setSolidPhaseCheck(true);
        
        testSystem.createDatabase(true);
        testSystem.setMixingRule(2);
        // 1- orginal no interaction 2- classic w interaction
        // 3- Huron-Vidal 4- Wong-Sandler
        //testSystem.setMixingRule(1);
        
        //
        testOps.TPflash();
        testSystem.display();
    }
}
