import thermo.system.*;
import thermodynamicOperations.*;

/*
 *
 * @author  esol
 * @version
 */
public class TPflash {
    
    /** Creates new TPflash */
    public TPflash() {
    }
    public static void main(String args[]){
        //SystemInterface testSystem2 = (SystemInterface) util.serialization.SerializationManager.open("c:/test.fluid");
        //testSystem2.display();
        SystemInterface testSystem = new SystemSrkEos(305,1.01325);
        //SystemInterface testSystem = new SystemSrkCPAs(330, 1.0101325);
        //  SystemInterface testSystem = new SystemPrEos(265.15,40.00);
        //SystemInterface testSystem = new SystemSrkSchwartzentruberEos(310.15,1.00);
        
        ThermodynamicOperations testOps = new ThermodynamicOperations(testSystem);
        testSystem.addComponent("nitrogen", 10.10);
        testSystem.addComponent("default", 5.1);
        //testSystem.addComponent("n-heptane", 10.0);
        //testSystem.addComponent("water", 0.001);
        testSystem.addComponent("n-heptane", 10.399);
        testSystem.addComponent("MEG", 100.0);
        testSystem.createDatabase(true);
        // 1- orginal no interaction 2- classic w interaction
        // 3- Huron-Vidal 4- Wong-Sandler
        testSystem.setMixingRule(4);
        //testSystem.setMultiPhaseCheck(true);
        testSystem.init(0);
        
      testSystem.removeComponent("MEG");
        //
        //testOps.TPflash();
        //testOps.dewPointPressureFlash();
        //testSystem.getPhase(0).setPressure(100);
        try{
            testOps.TPflash();
            testSystem.display();
            testSystem.write("c:/testFlash.txt","c:/testFlash.txt",true);
        }
        catch(Exception e){
            System.out.println(e.toString());
        }
        //thermo.ThermodynamicModelTest testModel = new thermo.ThermodynamicModelTest(testSystem);
        //testModel.runTest();
        testSystem.save("c:/test.fluid");
        System.out.println("micx" + testSystem.getMixingRuleName());
        //testSystem.setTemperature(146);
        //testOps.dewPointPressureFlash();
        //testSystem.display();
        //testOps.bubblePointTemperatureFlash();
    }
}
