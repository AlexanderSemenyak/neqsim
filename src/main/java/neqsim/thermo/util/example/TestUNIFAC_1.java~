import thermo.system.*;
import thermodynamicOperations.*;

/*
 *
 * @author  esol
 * @version
 */
public class TestUNIFAC {
    
    /** Creates new TPflash */
    public TestUNIFAC() {
    }
    public static void main(String args[]){
        //
       // SystemInterface testSystem = new SystemUNIFAC(273.15 + 55.0,1.301325);
        
        SystemInterface testSystem = new SystemSrkSchwartzentruberEos(273.15 + 55.0,1.301325);
        ThermodynamicOperations testOps = new ThermodynamicOperations(testSystem);
        // testSystem.addComponent("acetone", 100.0);
        //testSystem.addComponent("n-pentane", 100.00047);
        //testSystem.addComponent("c-C6", 90.0);
        testSystem.addComponent("water", 10.0);
        testSystem.addComponent("methanol", 10.0);
        testSystem.createDatabase(true);
        testSystem.setMixingRule("WS","UNIFAC");
        testSystem.init(0);
        testSystem.init(1);
        
        try{
            //testOps.TPflash();
            testOps.bubblePointPressureFlash(false);//(false);
        }
        catch(Exception e){
            System.out.println(e.toString());
        }
        testSystem.display();
    }
    
}
