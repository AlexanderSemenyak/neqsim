package thermo.util.example;

import thermo.system.*;
import thermodynamicOperations.*;

/**
 *
 * @author  esol
 * @version
 */
public class OsmoticCoefficient_HCl {
    
    /** Creates new OsmoticCoefficient_HCl */
    public OsmoticCoefficient_HCl() {
    }
    
    public static void main(String args[]){
        SystemInterface testSystem = new SystemFurstElectrolyteEos(298.15,1.01325);
        
        // creates a 0.1 molar solution 0.0018
        testSystem.addComponent("water", 1.0);
        testSystem.addComponent("ClMinus", 0.18018);
        testSystem.addComponent("H3Oplus", 0.18018);
        testSystem.setMixingRule(2);
        
        testSystem.init(0);
        testSystem.init(3);
        
        double osmCoef = testSystem.getPhase(1).getOsmoticCoefficientOfWater();
        double meanact = testSystem.getPhase(1).getMeanIonicActivity(1,2);
        
        System.out.println("mean ionic activity: " + meanact);
        System.out.println("osmotic coefficient: " + osmCoef);
    }
}
