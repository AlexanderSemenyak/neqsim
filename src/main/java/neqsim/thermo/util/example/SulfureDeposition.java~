package thermo.util.example;
/*
 * TPflash.java
 *
 * Created on 27. september 2001, 09:43
 */

import thermo.system.*;
import thermodynamicOperations.*;

/**
 *
 * @author  esol
 * @version
 */
public class SulfureDeposition {
    
    /** Creates new TPflash */
    public SulfureDeposition() {
    }
    
    public static void main(String args[]){
        SystemInterface testSystem = new SystemSrkSchwartzentruberEos(373.0,190.010);
        ThermodynamicOperations testOps = new ThermodynamicOperations(testSystem);
        testSystem.addComponent("methane",10.0);
        testSystem.addComponent("S8",10.01);
        testSystem.createDatabase(true);
        testSystem.setSolidPhaseCheck(true);
        testSystem.setMixingRule(2);
        
        try{
            testOps.TPflash();
            //testOps.freezingPointTemperatureFlash();
            System.out.println("mass " + testSystem.getPhase(0).getComponent("S8").getx()*testSystem.getPhase(0).getComponent("S8").getMolarMass()/testSystem.getPhase(0).getMolarMass()*100);
            
        }
        catch(Exception e){
            e.printStackTrace();
            System.out.println(e.toString());
        }
        testSystem.display();
    }
}
