import thermo.system.*;
import thermodynamicOperations.*;

/**
 *
 * @author  esol
 * @version
 */
public class BubbleFlashCPA {
    
    /** Creates new TPflash */
    public BubbleFlashCPA() {
    }
    public static void main(String args[]){
        SystemInterface testSystem = new SystemSrkCPA(293.15,1.01325);
        //SystemInterface testSystem = new SystemSrkEos(348.15,1.020080042300);
        ThermodynamicOperations testOps = new ThermodynamicOperations(testSystem);
        
        testSystem.addComponent("MDEA",  10.01);
       //  testSystem.addComponent("MEG",  10.01);
        //testSystem.addComponent("water", 100.10);
        //testSystem.addComponent("methanol",  10.01);
        
        //testSystem.addComponent("methane", 0.000040001);
        testSystem.createDatabase(true);
        // 1- orginal no interaction 2- classic w interaction
        // 3- Huron-Vidal 4- Wong-Sandler
        testSystem.setMixingRule(7);
        testSystem.init(0);
        testSystem.init(1);
        //        double val = testSystem.getPhases()[1].getActivityCoefficient(0);
        //        System.out.println("activity: " + val);
        
        try{
            //testOps.bubblePointTemperatureFlash();
            testOps.bubblePointPressureFlash(false);
        }
        catch(Exception e){
            System.out.println(e.toString());
        }
        testSystem.display();
        System.out.println("activity " + testSystem.getPhase(1).getActivityCoefficient(0));
        
        //        thermo.ThermodynamicModelTest testModel = new thermo.ThermodynamicModelTest(testSystem);
        //        testModel.runTest();
        
        
    }
}
