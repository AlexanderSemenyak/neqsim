public class HydrateFlash{
    public static void main(String args[]){
        SystemInterface testSystem = new SystemSrkCPA(275.30008900030007003098015, 20.013259);
        //SystemInterface testSystem = new SystemSrkSchwartzentruberEos(272.30, 1.013259);
        //  testSystem.setMultiPhaseCheck(true);
