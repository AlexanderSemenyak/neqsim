        //testSystem.addComponent("ethane", 0.05);
        //testSystem.addComponent("propane", 3.0);
        //testSystem.addComponent("MEG", 0.21);
        //testSystem.addComponent("methanol", 0.5);
        //testSystem.addComponent("n-heptane", 1.1);
        testSystem.addComponent("water", 10.1);
        
        testSystem.setSolidPhaseCheck(true);
        testSystem.setHydrateCheck(true);
        testSystem.createDatabase(true);
        testSystem.setMixingRule(2);
        //testSystem.setMultiPhaseCheck(true);
        //testSystem.init(0);
        //testSystem.init(1);
        //testOps.TPflash();
        //testSystem.display();
        try{
            //testOps.dewPointTemperatureFlash();
            //testOps.freezingPointTemperatureFlash();
            testOps.hydrateFormationPressure();
            // testOps.hydrateFormationTemperature();
            //testOps.TPflash();
            testSystem.display();
        }
        catch(Exception e){
            e.printStackTrace();
            System.out.println(e.toString());
        }
        
        testSystem.display();
    }
}