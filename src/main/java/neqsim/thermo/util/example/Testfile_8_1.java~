import dataPresentation.*;
import thermo.system.*;
import thermodynamicOperations.*;
import com.jrefinery.chart.*;

public class Testfile_8_1{
    
    /** This method is just meant to test the thermo package.
     */
    public static void main(String args[]){
        double[][] points;
        SystemInterface testSystem = new SystemFurstElectrolyteEos((273.15+25.0),0.001);
        //SystemInterface testSystem = new SystemSrkEos((273.15+25.0),10.0);
        
        testSystem.addComponent("CO2", 9.1);
        testSystem.addComponent("water", 100.0);             // legger til komponenter til systemet
        testSystem.addComponent("MDEA", 15.0);             // legger til komponenter til systemet
        
        testSystem.chemicalReactionInit();
        testSystem.setMixingRule(4);
        testSystem.init(0);
        testSystem.getChemicalReactionOperations().solveChemEq(0);
        ThermodynamicOperations testOps = new ThermodynamicOperations(testSystem);
        testOps.calcPloadingCurve();
        System.out.println("ph: " + testSystem.getPhases()[1].getpH());
        //  testOps.displayResult();
        testOps.writeNetCDF("c:/testloading.nc");
    }
}