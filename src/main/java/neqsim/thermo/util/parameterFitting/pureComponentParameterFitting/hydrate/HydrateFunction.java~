package thermo.util.parameterFitting.pureComponentParameterFitting.hydrate;

import thermo.system.*;
import thermo.phase.*;
import thermodynamicOperations.*;
import statistics.parameterFitting.nonLinearParameterFitting.*;

/**
 *
 * @author  Even Solbraa
 * @version
 */
public class HydrateFunction extends LevenbergMarquardtFunction {
    
    /** Creates new Test */
    public HydrateFunction() {
        // params = new double[3];
    }
    
    public double calcValue(double[] dependentValues){
       try{
            thermoOps.hydrateFormationPressure();
            System.out.println("pressure " + system.getPressure());
        }
        catch(Exception e){
            System.out.println(e.toString());
        }
       return system.getPressure();
    }
    
    
    public double calcTrueValue(double val){
        return val;
    }
    
    public void setFittingParams(int i, double value){
        params[i] = value;
        for(int j=0;j<4;j++){
            if(j==0) system.getPhase(j).getComponent(0).setLennardJonesEnergyParameter(value);
            if(j==1) system.getPhase(j).getComponent(0).setLennardJonesMolecularDiameter(value);
            if(j==2) system.getPhase(j).getComponent(0).setSphericalCoreRadius(value);
        }
    }
}