package physicalProperties.interfaceProperties;
import thermo.system.*;
import physicalProperties.interfaceProperties.surfaceTenison.*;

/**
 *
 * @author  esol
 * @version
 */
public class InterfaceProperties implements InterphasePropertiesInterface, java.io.Serializable, ThermodynamicConstantsInterface, Cloneable{
    
    SystemInterface system;
    SurfaceTensionInterface[] surfaceTensionCalc;
    double surfaceTension=0.0;
    
    /** Creates new InterfaceProperties */
    public InterfaceProperties() {
    }
    
    public InterfaceProperties(SystemInterface system) {
        this.system = system;
        surfaceTensionCalc = new SurfaceTensionInterface[1];
        
        for(int i=0;i<surfaceTensionCalc.length;i++){
            surfaceTensionCalc[i] = new GasLiquidSurfaceTension(system);
        }
    }
    
    public void init(){
        for(int i=0;i<surfaceTensionCalc.length;i++){
          //  surfaceTension = surfaceTensionCalc[i].calcSurfaceTension();
        }
    }
    
    public double getSurfaceTension(){
        return surfaceTension;
    }
    
    
}
