        initComponents();
        pack();
    }
    
    public graph2b(double[][] points){
        String[] seriesNames = new String[points.length];
        for(int i=0;i<points.length;i++) seriesNames[i] = new String("");
        String tit = new String("");
        String xaxis = new String("");
        String yaxis = new String("");
        titl = tit;
        xaxtitle = xaxis;
        yaxtitle = yaxis;
        xyData = new SampleXYDataSource(points, seriesNames, tit, xaxis, yaxis);
        categoryData = createCategoryDataSource();
        chart = ChartFactory.createXYChart(tit, xaxis,yaxis,xyData,true);
        //StandardTitle title = (StandardTitle)chart.getTitle();
        //title.setTitle(titl);
//        chart.setChartBackgroundPaint(new GradientPaint(0, 0, Color.white,0, 1000, Color.blue));
        Plot myPlot = chart.getPlot();
        Axis myVerticalAxis = myPlot.getAxis(Plot.VERTICAL);
        myVerticalAxis.setLabel(yaxtitle);
        Axis myHorisontalAxis = myPlot.getAxis(Plot.HORIZONTAL);
        myHorisontalAxis.setLabel(xaxtitle);
        
        chartPanel4 = new JFreeChartPanel(chart);
        chartPanel4.setBorder(BorderFactory.createCompoundBorder(
        BorderFactory.createEmptyBorder(4, 4, 4, 4),
        BorderFactory.createLineBorder(Color.darkGray, 1)));
        initComponents();
        getContentPane().add(chartPanel4,java.awt.BorderLayout.WEST);
        pack();
    }
    
    public graph2b(double[][] points, String[] seriesNames, String tit, String xaxis, String yaxis) {
        titl = tit;
        xaxtitle = xaxis;
        yaxtitle = yaxis;
        xyData = new SampleXYDataSource(points, seriesNames, tit, xaxis, yaxis);
        categoryData = createCategoryDataSource();
        chart = ChartFactory.createXYChart(tit, xaxis,yaxis,xyData,true);
        //StandardTitle title = (StandardTitle)chart.getTitle();
        //title.setTitle(titl);
//        chart.setChartBackgroundPaint(new GradientPaint(0, 0, Color.white,0, 1000, Color.blue));
        Plot myPlot = chart.getPlot();
        Axis myVerticalAxis = myPlot.getAxis(Plot.VERTICAL);
        myVerticalAxis.setLabel(yaxtitle);
        Axis myHorisontalAxis = myPlot.getAxis(Plot.HORIZONTAL);
        myHorisontalAxis.setLabel(xaxtitle);
        
        chartPanel4 = new JFreeChartPanel(chart);
        chartPanel4.setBorder(BorderFactory.createCompoundBorder(
        BorderFactory.createEmptyBorder(4, 4, 4, 4),
        BorderFactory.createLineBorder(Color.darkGray, 1)));
        initComponents();
        getContentPane().add(chartPanel4,java.awt.BorderLayout.WEST);
        pack();
    }
    
