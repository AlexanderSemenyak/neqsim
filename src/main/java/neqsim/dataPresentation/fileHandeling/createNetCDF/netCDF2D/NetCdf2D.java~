package dataPresentation.fileHandeling.createNetCDF.netCDF2D;


import ucar.ma2.*;
import ucar.nc2.*;
import java.io.IOException;
/**
 *
 * @author  esol
 * @version
 */
public class NetCdf2D {
    
    String fileName = "c:/temp/example.nc";
    double[] xvalues = new double[3];
    String xName="xDefault", yName="yDefault", zName = "zDefault";
    double[] yvalues = new double[3];
    double[][] yvalues2 = new double[50][3];
    String[] yName2 = new String[50];
    NetcdfFileWriteable ncfile;
    int yLength=0;
    
    /** Creates new NetCdf */
    public NetCdf2D() {
    }
    
    public void setOutputFileName(String name){
        fileName = name;
    }
    
    
    public void setXvalues(double[] x, String name, String unit){
        xvalues = x;
        xName = name;
    }
    
    public void setYvalues(double[] y, String name, String unit){
        yvalues = y;
        yName = name;
        
        yvalues2[yLength] = y;
        yName2[yLength] = name;
        yLength++;
    }
    
    
    public void createFile(){
        ncfile = new NetcdfFileWriteable();
        ncfile.setName(fileName);
        
        Dimension latD = ncfile.addDimension(xName, xvalues.length);
        Dimension[] lonD = new Dimension[50];
        
        Dimension[] dim2 = new Dimension[1];
        dim2[0] = latD;
        
        ncfile.addVariable(latD.getName(), double.class, new Dimension[] {latD});
        ncfile.addVariableAttribute(latD.getName(), "units", "degrees_north");
        
        for(int i=0;i<yLength;i++){
            lonD[i] = ncfile.addDimension(yName2[i], yvalues2[i].length);
            ncfile.addVariable(lonD[i].getName(), double.class, dim2);
            ncfile.addVariableAttribute(lonD[i].getName(), "units", "degrees_east");
        }
        
        ncfile.addGlobalAttribute("title", "Example Data");
        
        
        try {
            ncfile.create();
            
        }  catch (IOException e) {
            
            System.err.println("ERROR creating file");
        }
        
        try {
            ncfile.write(latD.getName(),  ArrayAbstract.factory(xvalues));
            for(int i=0;i<yLength;i++){
                ncfile.write(lonD[i].getName(),  ArrayAbstract.factory(yvalues2[i]));
            }
            
        } catch (IOException e) {
            System.err.println("ERROR writing file");
        }
        
        try {
            ncfile.close();
            
        } catch (IOException e) {
        }
        System.out.println("created " + fileName + " successfully");
    }
    
    public static void main(String[] args){
        double[] x = new double[10000];//{1,2,3};
        double[] y = new double[10000];
        NetCdf2D test = new NetCdf2D();
        test.setXvalues(x,"time","sec");
        test.setYvalues(y, "length","meter");
        test.createFile();
    }
    
}
